@page "/Products"
@model ProductsIndexModel

<h1>Products</h1>
<a class="btn btn-primary mb-3" asp-page="Create">Create New</a>
<table class="table table-striped">
    <thead><tr><th>Id</th><th>Name</th><th>Price</th><th>Stock</th><th></th></tr></thead>
    <tbody>
    @foreach(var p in Model.Products)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.Stock</td>
            <td>
                <!-- actions placeholder -->
            </td>
        </tr>
    }
    </tbody>
</table>
