@page "/Customers/Create"
@model CreateModel

<h1>Create Customer</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="Customer.Name" class="form-label"></label>
        <input asp-for="Customer.Name" data-test="customer-name-input" class="form-control input-touch" />
    </div>
    <div class="mb-3">
        <label asp-for="Customer.Email" class="form-label"></label>
        <input asp-for="Customer.Email" data-test="customer-email-input" class="form-control input-touch" />
    </div>
    <div class="action-row">
        <button type="submit" data-test="customer-create-submit" class="btn btn-touch">Create</button>
        <a class="btn btn-touch btn-secondary" asp-page="Index">Cancel</a>
    </div>
</form>
