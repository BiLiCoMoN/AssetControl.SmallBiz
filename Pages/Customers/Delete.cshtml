@page "{id:int}"
@model DeleteModel

<h1>Delete Customer</h1>

<div>
    <p>Are you sure you want to delete <strong>@Model.Customer?.Name</strong>?</p>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-page="Index">Cancel</a>
    </form>
</div>
